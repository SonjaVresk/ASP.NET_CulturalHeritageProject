@model CulturalHeritageWebApp.ViewModels.VMHeritage

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/delete.css">
</head>
<body>
    <div class="delete" style="background-image: linear-gradient(rgba(0,0,0,0.5), #F8F0E5), url(/Photos/lado.jpg);">

        <div class="formDelete">

            <h3>Are you sure you want to delete this?</h3>

            <dl class="row">
                <dt class="col-sm-2" style="display: none;">
                    @Html.DisplayNameFor(model => model.IDHeritage)
                </dt>
                <dd class="col-sm-10" style="display: none;">
                    @Html.DisplayFor(model => model.IDHeritage)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2" style="display: none;">
                    @Html.DisplayNameFor(model => model.AgeCategoryID)
                </dt>
                <dd class="col-sm-10" style="display: none;">
                    @Html.DisplayFor(model => model.AgeCategory.Name)
                </dd>
                <dt class="col-sm-2" style="display: none;">
                    @Html.DisplayNameFor(model => model.HeritageCategoryID)
                </dt>
                <dd class="col-sm-10" style="display: none;">
                    @Html.DisplayFor(model => model.HeritageCategoryID)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> <br />
                <a asp-action="Index" class="hero-btn">Back to List</a>
            </form>
        </div>
    </div>

    @*Footer*@

    <section class="footer">
        <h4>About Us</h4>
        <p>
            Create. Protect. Share.
        </p>
        <div class="icons">
            <img src="~/Photos/face-logo.png" class="logo" />
            <img src="~/Photos/insta-logo.png" class="logo" />
            <img src="~/Photos/tik-tok-logo.png" class="logo" />
            <img src="~/Photos/x-logo.png" class="logo" />
        </div>
    </section>

</body>
</html>